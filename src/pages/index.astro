---
import SiteLayout from "../layouts/SiteLayout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Features from "../components/Features.astro";
import Footer from "../components/Footer.astro";
---

<SiteLayout title="Astroria | Enterprise Bitrix24 Solutions">
	<Navbar />

        <main>
                <Hero />
                <Services />
                <Features />

                <section id="cases" class="py-24 bg-dark-950/60 relative overflow-hidden">
                        <div class="absolute inset-0 bg-gradient-to-r from-cyan-900/10 via-transparent to-blue-900/10"></div>
                        <div class="container-custom relative z-10">
                                <div class="text-center mb-14">
                                        <p class="text-sm font-semibold tracking-[0.3em] text-cyan-300 uppercase">
                                                Proof in Motion
                                        </p>
                                        <h2 class="text-4xl md:text-5xl font-bold mt-3 mb-4">
                                                Recent <span class="text-cyan-400">Case Studies</span>
                                        </h2>
                                        <p class="text-lg text-gray-400 max-w-3xl mx-auto">
                                                Snapshots of how we reduced manual work, unified communication, and shipped reliable automations for high-growth teams.
                                        </p>
                                </div>

                                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                                        {[
                                                {
                                                        title: "Logistics network scaling",
                                                        result: "48% faster dispatching",
                                                        detail:
                                                                "Rebuilt task routing and SLA dashboards inside Bitrix24 for a 12-country fleet team.",
                                                },
                                                {
                                                        title: "SaaS revenue operations",
                                                        result: "7-day billing cycle cut to 24h",
                                                        detail:
                                                                "Connected CRM, invoicing, and customer success playbooks with automated approvals.",
                                                },
                                                {
                                                        title: "Manufacturing service desk",
                                                        result: "2.5x ticket throughput",
                                                        detail:
                                                                "Implemented triage macros, AI replies, and on-call rotations across plants.",
                                                },
                                        ].map((item) => (
                                                <article class="p-6 rounded-2xl bg-white/5 border border-white/10 shadow-lg shadow-cyan-500/5">
                                                        <div class="flex items-center justify-between mb-4">
                                                                <h3 class="text-xl font-semibold text-white">{item.title}</h3>
                                                                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-cyan-500/20 text-cyan-300 border border-cyan-500/30">
                                                                        {item.result}
                                                                </span>
                                                        </div>
                                                        <p class="text-gray-400 leading-relaxed">{item.detail}</p>
                                                </article>
                                        ))}
                                </div>
                        </div>
                </section>

                <section id="about" class="py-24 relative">
                        <div class="container-custom grid grid-cols-1 lg:grid-cols-3 gap-12 items-center">
                                <div class="lg:col-span-2 space-y-6">
                                        <p class="text-sm font-semibold tracking-[0.25em] text-cyan-300 uppercase">
                                                About Astroria
                                        </p>
                                        <h2 class="text-4xl md:text-5xl font-bold leading-tight">
                                                Implementers, strategists, and long-term partners.
                                        </h2>
                                        <p class="text-lg text-gray-400 leading-relaxed">
                                                We are a multidisciplinary Bitrix24 team that blends systems design with change management. From discovery to training, we obsess over adoption and measurable ROI.
                                        </p>
                                        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                                                {[
                                                        { label: "Deployments", value: "180+" },
                                                        { label: "Satisfaction", value: "4.9/5" },
                                                        { label: "Automation savings", value: "12k+ hrs" },
                                                ].map((stat) => (
                                                        <div class="p-4 rounded-xl bg-white/5 border border-white/10">
                                                                <div class="text-2xl font-bold text-white">{stat.value}</div>
                                                                <div class="text-sm uppercase tracking-wide text-gray-500">{stat.label}</div>
                                                        </div>
                                                ))}
                                        </div>
                                </div>
                                <div class="lg:col-span-1 p-6 rounded-2xl bg-gradient-to-br from-cyan-500/10 via-white/5 to-blue-500/10 border border-cyan-500/20 shadow-xl">
                                        <h3 class="text-xl font-semibold text-white mb-3">How we work</h3>
                                        <ul class="space-y-3 text-gray-300">
                                                <li class="flex items-start gap-3">
                                                        <span class="mt-1 h-2 w-2 rounded-full bg-cyan-400"></span>
                                                        <span>Map your data model, KPIs, and governance needs before building.</span>
                                                </li>
                                                <li class="flex items-start gap-3">
                                                        <span class="mt-1 h-2 w-2 rounded-full bg-cyan-400"></span>
                                                        <span>Prototype automations fast, then iterate with your leads in working sessions.</span>
                                                </li>
                                                <li class="flex items-start gap-3">
                                                        <span class="mt-1 h-2 w-2 rounded-full bg-cyan-400"></span>
                                                        <span>Enable your teams with playbooks, office hours, and observability dashboards.</span>
                                                </li>
                                        </ul>
                                </div>
                        </div>
                </section>

                <!-- CTA Section -->
                <section id="contact" class="py-32 relative overflow-hidden">
                        <div
                                class="absolute inset-0 bg-gradient-to-b from-dark-950 to-cyan-950/20"
                        >
                        </div>
                        <div class="container-custom relative z-10 text-center">
                                <h2 class="text-5xl md:text-6xl font-bold mb-8">
                                        Ready to <span class="text-cyan-400">Automate?</span>
                                </h2>
                                <p class="text-xl text-gray-400 max-w-2xl mx-auto mb-12">
                                        Join the 500+ enterprises that have transformed their
                                        operations with our custom Bitrix24 solutions.
                                </p>
                                <a
                                        href="#contact"
                                        class="inline-block px-10 py-5 bg-cyan-500 text-black font-bold text-lg rounded-full hover:bg-cyan-400 transition-all duration-300 shadow-[0_0_30px_rgba(6,182,212,0.4)] hover:shadow-[0_0_50px_rgba(6,182,212,0.6)]"
                                >
                                        Schedule Free Consultation
                                </a>
                        </div>
                </section>
        </main>

	<Footer />
</SiteLayout>
